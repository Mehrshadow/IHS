<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_theme"
    android:gravity="bottom|right|center_vertical"
    tools:context=".ActivityMain" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="115dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="@drawable/lay_back_wizard"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layOptions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/chkAnd"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:button="@drawable/radiobutton_selector"
                        android:gravity="center"
                        android:text="AND"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:typeface="monospace" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="20dp"
                        android:paddingTop="20dp" >

                        <TextView
                            android:id="@+id/txtAndHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Need all preconditions."
                            android:textColor="#B1C459"
                            android:textSize="30sp"
                            android:typeface="monospace" />

                        <TextView
                            android:id="@+id/txtAndDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="if you choose this option , the scenario will start only if all conditions occurs at a same time."
                            android:textColor="@color/white"
                            android:typeface="monospace" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp" >

                    <RadioButton
                        android:id="@+id/chkOr"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:button="@drawable/radiobutton_selector"
                        android:gravity="center"
                        android:text="OR"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:typeface="monospace" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="20dp"
                        android:paddingTop="20dp" >

                        <TextView
                            android:id="@+id/txtOrHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Need any of preconditions."
                            android:textColor="#B1C459"
                            android:textSize="30sp"
                            android:typeface="monospace" />

                        <TextView
                            android:id="@+id/txtOrDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="if you choose this option , the scenario will start if any of conditions occurs separately."
                            android:textColor="@color/white"
                            android:typeface="monospace" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="95dp"
        android:layout_marginRight="115dp"
        android:layout_marginTop="10dp"
        android:gravity="right" >

        <Button
            android:id="@+id/btnCancel"
            style="@style/button_navigation_theme"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:text="Cancel" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

        </LinearLayout>

        <Button
            android:id="@+id/btnBack"
            style="@style/button_navigation_theme"
            android:text="Back" />

        <Button
            android:id="@+id/btnNext"
            style="@style/button_navigation_theme"
            android:layout_marginRight="0dp"
            android:text="Next" />

    </LinearLayout>

</LinearLayout>