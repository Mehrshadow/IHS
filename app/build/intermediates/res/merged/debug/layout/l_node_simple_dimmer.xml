<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="240dp"
        android:background="@drawable/lay_node_back_main"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/dimmerOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtlbl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="%1"
                android:textColor="@color/black"
                android:typeface="monospace" />

            <LinearLayout
                android:id="@+id/layTouch1"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/layGray1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imgGray1"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:scaleType="matrix"
                        android:src="@drawable/lay_component_dimmer_slider_off" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layGreen1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imgGreen1"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:scaleType="matrix"
                        android:src="@drawable/lay_component_dimmer_slider_on" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/txtName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:maxLines="3"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="8sp"
                android:typeface="monospace" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dimmerTwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtlbl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="%2"
                android:textColor="@color/black"
                android:typeface="monospace" />

            <LinearLayout
                android:id="@+id/layTouch2"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/layGray2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imgGray2"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:scaleType="matrix"
                        android:src="@drawable/lay_component_dimmer_slider_off" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layGreen2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imgGreen2"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:scaleType="matrix"
                        android:src="@drawable/lay_component_dimmer_slider_on" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/txtName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:maxLines="3"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="8sp"
                android:typeface="monospace" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/laySetting"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="@drawable/lay_node_back_buttom"
        android:gravity="center" >

        <ProgressBar
            android:id="@+id/prgDoOperation"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <TextView
            android:id="@+id/txtNodeName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:typeface="monospace" />

        <ImageView
            android:id="@+id/imgFavorites"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/icon_fav_empty" />

        <ImageView
            android:id="@+id/imgbtnEdit"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="4dp"
            android:src="@drawable/icon_com_setting" />

    </LinearLayout>

</LinearLayout>
