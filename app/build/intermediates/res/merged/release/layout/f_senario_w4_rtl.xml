<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_theme"
    android:gravity="bottom|right|center_vertical"
    tools:context=".ActivityMain" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="115dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="@drawable/lay_back_wizard"
        android:orientation="vertical"
        android:paddingBottom="25dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="25dp" >

        <LinearLayout
            android:id="@+id/laySwitcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <Switch
                android:id="@+id/swhActive"
                style="@style/switch_theme"
                android:gravity="center"
                android:text="Do you want to enable GPS preconditions ?"
                android:thumb="@drawable/thumb_switch_selector"
                android:track="@drawable/lay_on_off_back" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layOptions"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.7"
            android:orientation="vertical"
            android:visibility="invisible" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lay_other_button_normal"
                android:gravity="center|left"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/lay_groupbox"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp" >

                    <RadioButton
                        android:id="@+id/rdbtnEntering"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:button="@drawable/radiobutton_selector"
                        android:gravity="center"
                        android:text="ورود به ناحیه"
                        android:textColor="@color/white"
                        android:typeface="monospace" />

                    <RadioButton
                        android:id="@+id/rdbtnExiting"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/radiobutton_selector"
                        android:gravity="center"
                        android:text="خروج از ناحیه"
                        android:textColor="@color/white"
                        android:typeface="monospace" />

                </LinearLayout>

                <Spinner
                    android:id="@+id/spnMobile"
                    style="@style/spinner_theme_rtl"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="16dp" />

                <TextView
                    android:id="@+id/textView2"
                    style="@style/textview_before_editbox_theme"
                    android:layout_marginRight="5dp"
                    android:text=":دستگاه موبایل"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" >

                    <Button
                        android:id="@+id/btnSet"
                        style="@style/button_other_theme"
                        android:layout_width="160dp"
                        android:layout_height="48dp"
                        android:text="Apply"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1" >

                    <Spinner
                        android:id="@+id/spnDistance"
                        style="@style/spinner_theme_rtl"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="0.7" />

                    <EditText
                        android:id="@+id/edtRadius"
                        style="@style/edittext_theme"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.5"
                        android:ems="10"
                        android:gravity="right|center_vertical"
                        android:textSize="20sp" >

                        <requestFocus />
                    </EditText>

                    <TextView
                        android:id="@+id/TextView02"
                        style="@style/textview_before_editbox_theme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="2dp"
                        android:text="شعاع"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <EditText
                        android:id="@+id/edtLong"
                        style="@style/edittext_theme"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="right|center_vertical"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/TextView01"
                        style="@style/textview_before_editbox_theme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="2dp"
                        android:gravity="center"
                        android:text="طول جغرافیایی"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1" >

                    <EditText
                        android:id="@+id/edtLat"
                        style="@style/edittext_theme"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="right|center_vertical"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtLanguage"
                        style="@style/textview_before_editbox_theme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:text="عرض جغرافیایی"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <WebView
                    android:id="@+id/webMap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:scrollbars="none" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="95dp"
        android:layout_marginRight="115dp"
        android:layout_marginTop="10dp"
        android:gravity="right" >

        <Button
            android:id="@+id/btnCancel"
            style="@style/button_navigation_theme"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:text="Cancel" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

        </LinearLayout>

        <Button
            android:id="@+id/btnBack"
            style="@style/button_navigation_theme"
            android:text="Back" />

        <Button
            android:id="@+id/btnNext"
            style="@style/button_navigation_theme"
            android:layout_marginRight="0dp"
            android:text="Next" />

    </LinearLayout>

</LinearLayout>