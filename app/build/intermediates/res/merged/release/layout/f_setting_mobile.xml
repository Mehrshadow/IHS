<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	style="@style/layout_theme"
    tools:context=".ActivityMain" >

    <LinearLayout
        android:id="@+id/laySettingMobile"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/layList"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/lstMobiles"
                style="@style/list_theme"
                android:layout_margin="16dp"
                android:layout_weight="0.5"
                android:background="@drawable/lay_back_list"
                android:divider="@null"
                android:listSelector="@android:color/transparent"
                tools:listitem="@layout/l_list_scemario_detail_items" >

            </ListView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layQR"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtTitle"
                style="@style/textview_before_editbox_theme"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:text="Scan this QR with ihs Mobile app" />

            <ImageView
                android:id="@+id/imgQR"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
             />

            <TextView
                android:id="@+id/txtTitleMarket"
                style="@style/textview_before_editbox_theme"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:text="Scan this QR with ihs Mobile app" />
              <LinearLayout android:layout_width="match_parent"
                            android:layout_marginLeft="20dp"
                            android:id="@+id/layMarkets"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_marginRight="20dp"
                            android:layout_height="match_parent">
                  <!--<ir.parsansoft.app.ihs.center.components.HorizontialListView-->
                          <!--android:id="@+id/lstMarket"-->
                          <!--android:layout_width="wrap_content"-->
                          <!--android:layout_height="wrap_content"-->
                          <!--android:divider="@android:color/transparent"-->
                          <!--android:cacheColorHint="#00000000">-->
                  <!--</ir.parsansoft.app.ihs.center.components.HorizontialListView>-->



              </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
