<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layMain"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/lay_popup_bg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ActivityMain" >

    <LinearLayout
        android:id="@+id/layOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imgKeyboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/btn_keyboard_selector" />

            <TextView
                android:id="@+id/txtHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Login"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="normal|bold"
                android:typeface="monospace" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Choice your Username"
                android:textColor="#ffffff"
                android:textStyle="normal|bold"
                android:typeface="monospace" />

            <Spinner
                android:id="@+id/spnUser"
                style="@style/spinner_theme"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

<requestFocus />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="Enter new password"
                android:textColor="#ffffff"
                android:textStyle="normal|bold"
                android:typeface="monospace" />

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/lay_edittext_bg"
                android:ems="10"
                android:inputType="numberPassword" >
                
            </EditText>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center" >

        <!--<Button-->
            <!--android:id="@+id/btnCancel"-->
            <!--style="@style/button_other_theme"-->
            <!--android:layout_width="150dp"-->
            <!--android:layout_height="48dp"-->
            <!--android:layout_marginLeft="32dp"-->
            <!--android:layout_marginRight="20dp"-->
            <!--android:background="@drawable/button_add_selector"-->
            <!--android:text="Cancel"-->
            <!--android:textColor="@color/white" />-->

        <TextView
            android:id="@+id/txtLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnLogin"
            style="@style/button_other_theme"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/button_add_selector"
            android:text="Login"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>
