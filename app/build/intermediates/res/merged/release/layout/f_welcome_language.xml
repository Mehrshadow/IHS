<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ActivityMain" >

    <LinearLayout
        android:id="@+id/laySettings"
        android:layout_width="990dp"
        android:layout_height="500dp"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/lay_en"
                android:layout_width="160dp"
                android:layout_height="65dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/lay_language_en"
                android:clickable="true"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="English"
                    android:textColor="@color/white"
                    android:typeface="monospace" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_fa"
                android:layout_width="160dp"
                android:layout_height="65dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/lay_language_fa"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="فارسی"
                    android:textColor="@color/white"
                    android:typeface="monospace" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_ar"
                android:layout_width="160dp"
                android:layout_height="65dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/lay_language_ar"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="العربية"
                    android:textColor="@color/white"
                    android:typeface="monospace" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_tk"
                android:layout_width="160dp"
                android:layout_height="65dp"
                android:background="@drawable/lay_language_tk"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Türk"
                    android:textColor="@color/white"
                    android:typeface="monospace" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>