<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_back_master"
     android:focusable="true"
 android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lay_back_main"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_main"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layToolbar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/logo_main_ihs__header_small" />

                <ImageView
                    android:id="@+id/imgKeyboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_keyboard_selector" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Digital Home Controller"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/txtHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="23dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:typeface="monospace" />

            <LinearLayout
                android:layout_width="460dp"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp" >

                <TextView
                    android:id="@+id/txtTemperature"
                    android:layout_width="47dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:typeface="monospace" />

                <ImageView
                    android:id="@+id/imgWeatherIcon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:paddingBottom="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon__weather_default" />

                <ImageView
                    android:id="@+id/imgWifiIcon"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginBottom="50dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/lay_icon_wifi" />

                <LinearLayout
                    android:id="@+id/imgAlarmIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="9dp"
                    android:background="@drawable/lay_icon_alarm"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txtAlarmCount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"

                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:typeface="monospace" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/img_server_status"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/lay_icon_main_server_indicator_disconnected" />

                    <ImageView
                        android:id="@+id/imgHelp"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="23dp"
                        android:layout_marginTop="8dp"
                        android:clickable="true"
                        android:src="@drawable/btn_main_icon_help_selector" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginRight="0dp"
                    android:gravity="center"
                    android:text="09:21:53"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="monospace" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/layForms"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="62dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/lay_back_wizard"
                android:gravity="center"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layNavigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="10dp"
                android:gravity="center" >

                <Button
                    android:id="@+id/btnCancel"
                    style="@style/button_navigation_theme"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:text="Cancel"
                    android:visibility="invisible" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >
                </LinearLayout>

                <Button
                    android:id="@+id/btnBack"
                    style="@style/button_navigation_theme"
                    android:layout_marginLeft="120dp"
                    android:text="Back" />

                <Button
                    android:id="@+id/btnNext"
                    style="@style/button_navigation_theme"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="0dp"
                    android:text="Next" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>