<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_theme"
    tools:context=".ActivityMain" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="400dip"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <ExpandableListView
                    android:id="@+id/elist1"
                    style="@style/list_theme"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_weight="1"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:groupIndicator="@null"
                    android:listSelector="@android:color/transparent"
                    android:padding="10dp"
                    tools:listitem="@android:layout/simple_expandable_list_item_2" >

                </ExpandableListView>

              <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right" >
 
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btnAddSection"
                    style="@style/button_other_theme"
                    android:layout_width="250dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="5dp"
                    android:text="Add Section" />

                <Button
                    android:id="@+id/btnAddRoom"
                    style="@style/button_other_theme"
                    android:layout_width="250dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="5dp"
                    android:text="Add Room" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>