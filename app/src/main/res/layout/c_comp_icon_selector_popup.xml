<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:background="@drawable/lay_popup_bg"
    android:orientation="vertical"
    tools:context=".ActivityMain" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/d_section_section_l2r_txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Select an icon :"
            android:textColor="@color/white"
            android:typeface="monospace" />

        <GridView
            android:id="@+id/grdIcons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:horizontalSpacing="5dp"
            android:numColumns="6"
            android:verticalSpacing="8dp"
            tools:listitem="@layout/c_comp_icon_selector" >
        </GridView>

        <Button
                android:id="@+id/btnCancel"
                style="@style/button_other_theme"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_add_selector"
                android:text="Cancel"
                android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>
